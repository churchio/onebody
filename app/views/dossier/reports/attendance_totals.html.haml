- @title = report.formatted_title

- content_for :header do
  %section.content-header
    = breadcrumbs
    %h1
      = @title
.row
  .col-md-3
    .box.box-info.hidden-print
      .box-heading
      .box-body
        = form_for report, as: :options, url: url_for, html: {method: :get} do |f|
          .form-group
            = f.label t('attendance_totals.fromdate')
            = f.date_field :fromdate, class: 'form-control', value: report.fromdate ? report.fromdate.to_s(:date) : nil
            = f.label t('attendance_totals.thrudate')
            = f.date_field :thrudate, class: 'form-control', value: report.thrudate ? report.thrudate.to_s(:date) : nil

          .form-group
            %tr
              %td
                = f.submit t('attendance_totals.submit'), class: 'btn btn-info'
                = link_to formatted_dossier_report_path('csv', report), class: 'btn btn-info' do
                  = icon 'fa fa-download'
                  CSV
                = link_to formatted_dossier_report_path('xls', report), class: 'btn btn-info' do
                  = icon 'fa fa-download'
                  XLS
  .col-md-9
    %table.table
      %thead
        %tr
          %th= t('attendance_totals.name')
          %th= t('attendance_totals.attended_at')
          %th= t('attendance_totals.count')
      %tbody
        - report.results.body.each do |row|
          %tr
            - row.each do |value|
              %td= value
  .col-md-9
    = t('attendance_totals.records', count: report.results.body.count)
